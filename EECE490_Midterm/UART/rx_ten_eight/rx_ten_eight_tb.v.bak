module rx_ten_eight_tb();

localparam period = 5;
localparam cycle = period * 2;

reg 		  clk;
reg 		  rst;
reg		  sel;
reg 		  set;
reg [7:0]  din;
reg [19:0] baud;

wire 		  tx_en;
wire 		  tx_out;
wire [9:0] tx_d;

tx_eight_ten tx_eight_ten
(
	.clk	  (clk),
	.rst	  (rst),
	.sel	  (sel),
	.set	  (set),
	.din	  (din),
	.baud   (baud),
	
	.tx_en  (tx_en),
	.tx_out (tx_out),
	.tx_d	  (tx_d)
);

/* ------ !! ------
	Clock generation
	------ !! ------ */
initial clk <= 1'b1;
always #(period) clk <= ~clk;

/* ------ !! ------
	 Reset COntrol
	------ !! ------ */
initial
begin
	
	rst <= 1'b1;
	
	#(cycle * 2)
	
	rst <= 1'b0;

end

